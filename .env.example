# Faberwork Test Automation Environment Configuration
# Copy this file to .env and update values as needed

# ============================================
# Application Settings
# ============================================
BASE_URL=https://www.faberwork.com
ENVIRONMENT=production

# ============================================
# Browser Configuration
# ============================================
BROWSER=chrome
HEADLESS=True
WINDOW_SIZE=1920x1080
BROWSER_VERSION=latest

# ============================================
# Wait Times (in seconds)
# ============================================
IMPLICIT_WAIT=10
EXPLICIT_WAIT=20
PAGE_LOAD_TIMEOUT=30
SCRIPT_TIMEOUT=30

# ============================================
# Test Configuration
# ============================================
TAKE_SCREENSHOT_ON_FAILURE=True
RETRY_FAILED_TESTS=2
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY=2

# ============================================
# Reporting
# ============================================
ALLURE_RESULTS_DIR=reports
SCREENSHOT_DIR=screenshots
LOG_DIR=logs
REPORT_TITLE=Faberwork Test Automation Report

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO
CONSOLE_LOG_LEVEL=INFO
FILE_LOG_LEVEL=DEBUG
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ============================================
# Selenium Grid (Optional)
# ============================================
USE_SELENIUM_GRID=False
SELENIUM_HUB_URL=http://selenium-hub:4444/wd/hub

# ============================================
# Test Data
# ============================================
TEST_USER_EMAIL=test@example.com
TEST_USER_NAME=Test User
TEST_COMPANY=Test Company
TEST_PHONE=+1234567890

# ============================================
# API Configuration (for chatbot testing)
# ============================================
API_BASE_URL=https://www.faberwork.com/api
API_TIMEOUT=30

# ============================================
# Parallel Execution
# ============================================
PARALLEL_PROCESSES=1
PARALLEL_ENABLED=False

# ============================================
# Email Notifications (Optional)
# ============================================
SEND_EMAIL_REPORT=False
EMAIL_RECIPIENTS=qa-team@example.com
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=

# ============================================
# Slack Notifications (Optional)
# ============================================
SEND_SLACK_NOTIFICATION=False
SLACK_WEBHOOK_URL=

# ============================================
# Advanced Settings
# ============================================
CLEAR_COOKIES_BETWEEN_SCENARIOS=True
CLEAR_CACHE_BETWEEN_SCENARIOS=False
ENABLE_PERFORMANCE_LOGGING=False
ENABLE_NETWORK_LOGGING=False
ENABLE_BROWSER_LOGGING=True

# ============================================
# Chrome Options
# ============================================
DISABLE_GPU=True
NO_SANDBOX=True
DISABLE_DEV_SHM_USAGE=True
DISABLE_EXTENSIONS=True
DISABLE_INFOBARS=True
